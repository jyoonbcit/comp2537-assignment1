<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1> Users </h1>
    <% users.forEach(function(user) { %>
        <li style="display: inline-block"> <%= user.name %> (<%= user.type %>) </li> 
        <form action="/admin/promote" method="POST" style="display: inline-block">
            <input type="hidden" name="id" value="<%= user.id %>">
            <button type="submit">Promote</button>
        </form>
        <form action="/admin/demote" method="POST" style="display: inline-block">
            <input type="hidden" name="id" value="<%= user.id %>">
            <button type="submit">Demote</button>
    <% }) %>
</body>
</html>