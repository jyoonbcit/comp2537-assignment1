<h1> Users </h1>
<% users.forEach(function(user) { %>
    <ul>
        <li style="display: inline-block">
            <%= user.name %> (<%= user.type %>)
                    <form action="/admin/promote" method="POST" style="display: inline-block">
                        <input type="hidden" name="id" value="<%= user.id %>">
                        <button type="submit" class="btn btn-danger">Promote</button>
                    </form>
                    <form action="/admin/demote" method="POST" style="display: inline-block">
                        <input type="hidden" name="id" value="<%= user.id %>">
                        <button type="submit" class="btn btn-primary">Demote</button>
                    </form>
        </li>
        <br>
    </ul>
<% }) %>